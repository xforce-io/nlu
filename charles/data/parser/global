FEATURE_EXTRACTOR_BEGIN(chunker)
    ^{ #Pos((nP-)+) -> syntactic.np }
    ~{ #Pos((cP-)+) -> syntactic.advp }
    ~{ #Pos((dP-)*((v|rp)P-)) -> syntactic.v }
    ~{ #Pos((dP-)*(pP-)) { ["了", "着"] ?} -> syntactic.p }
    ~{ [#Pos((mP-)*(qP-)+), #Pos((mP-)+)] -> syntactic.qp }
    ~{ #Pos((tP-)+) -> syntactic.tp }
    ~{ #Pos(lP) "的" -> syntactic.advp}
FEATURE_EXTRACTOR_END

FEATURE_EXTRACTOR_BEGIN(syntaxFromChunk)
    { #Pos(((n|rn|t|m|q|f|j|h|k)P-)*((n|rn|j|k)P-)) -> syntactic._cont_np_ }
    { #Pos((n|rn)P) -> syntactic.np }
    { #Pos((m|q)P) -> syntactic.qp }
    { #Pos((dP-)*((a|b|z)P-)+) -> syntactic.advp }
    { #Pos(u) -> syntactic.u }
    { #Pos(fP) -> syntactic.dt }
FEATURE_EXTRACTOR_END

FEATURE_EXTRACTOR_BEGIN(syntax)
    { { #Chk(vp) #Chk(np) -> syntactic.np } #Chk(vp) $MPP -> syntactic._stc_ }
    { #Chk(v) #Chk(np) #Chk(np) $MPP -> syntactic._stc_ }
    { #Chk(np) { #Chk(vw) ?} #Chk(pp) { $V ?} $MPP -> syntactic._stc_ }
    { #Chk(np) #Chk(v) #Chk(np) #Chk(advp) $MPP -> syntactic._stc_ }
    { { #Chk(np) ?} #Chk(v) #Chk(vp) $MPP -> syntactic._stc_ }
    { { #Chk(pp) ?} #Chk(np) #Chk(np) $V $MPP -> syntactic._stc_ }
    { #Chk(np) { #Chk(v) ?} #Chk(advp) $MPP -> syntactic._stc_ }
    { #Chk(np) #Chk(advp) #Chk(vp) $MPP -> syntactic._stc_ }
    { #Chk(np) #Chk(advp) #Chk(np) #Chk(advp) $MPP -> syntactic._stc_ }
    { { #Chk(advp) ?} { #Chk(pp) ?} { #Chk(np) ?} $V $MPP -> syntactic._stc_ }
    { { #Chk(advp) ?} #Chk(pp) #Chk(v) #Chk(np) #Chk(np) $MPP -> syntactic._stc_ }
    { { #Chk(_cont_np_) #Pos(c) #Chk(_cont_np_) -> syntactic.np } $MPP -> syntactic._stc_ }
    { #Chk(np) $MPP -> syntactic._stc_ }
    { #Chk(v) #Chk(pp) $MPP -> syntactic._stc_ }
    { #Chk(pp) $MPP -> syntactic._stc_ }

    { $V #Pos(c) $V -> syntactic.vp }

    ~{ { #Chk(dt) ?} #Chk(qp) -> syntactic.dp }
    ~{ #Chk(advp) {"的" ?} #Chk(np) $MPP % -> syntactic.np }
    ~{ $V "的" #Chk(np) -> syntactic.np }
    ~{ #Chk(dp) "的" #Chk(np) -> syntactic.np }
    ~{ #Chk(dp) #Chk(np) -> syntactic.np }
    ~{ #Chk(np) [#Chk(np), #Chk(qp), #Chk(dp)] $MPP % -> syntactic.np }
    ^{ #Chk(np) "的" #Chk(np) -> syntactic.np }
    ~{ #Chk(dp) #Chk(advp) -> syntactic.advp }
    ~{ "一" #Pos(nP) -> syntactic.advp }
    ~{ { { #Chk(v) && #Reg(.*是) } [#Chk(advp), $V] "的" -> syntactic.vp } $MPP % }
    ~{ { #Chk(v) && #Pos(rp) } #Chk(vp) "的" -> syntactic.advp }

    ~{ { #Chk(p) #Chk(dp) -> syntactic.pp } $V }
    ~{ #Chk(v) "了" -> syntactic.v }
    ~{ #Chk(v) #Chk(np) $MPP % -> syntactic.vp }
    ~{ #Chk(dp) #Chk(v) $MPP % -> syntactic.vp }
    ~{ #Chk(v) #Chk(v) $MPP % -> syntactic.vp }
    ~{ #Chk(vw) #Chk(v) -> syntactic.v }
    ~{ #Chk(vw) #Chk(vp) -> syntactic.vp }
    ~{ #Chk(_cont_np_) #Chk(_cont_np_) -> syntactic._cont_np_}
    ~{ #Chk(_cont_np_) $MPP % -> syntactic.np }
FEATURE_EXTRACTOR_END
